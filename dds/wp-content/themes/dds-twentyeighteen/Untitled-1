						<?php       
							$posts = new WP_Query(array('posts_per_page' => 1));
							if ($posts->have_posts()): ?>
								<ul class="custom-archives" id="archives">
									
									<?php 
									$prev_month = '';
									while ($posts->have_posts()): $posts->the_post();
										if (get_the_date('F Y') != $prev_month): 
											$prev_month = get_the_date('F Y'); ?>
												<li class="month"><?= $prev_month; ?></li>
										<?php endif; ?>
										<li>
											<div class="custom-archives-top-blog">
												<a href="<?php the_permalink(); ?>"><?php the_title(); ?></a>
												<?php the_excerpt(); ?>
											</div>
										</li>
									<?php endwhile; ?>
								</ul>
						<?php endif; ?>


                        				<?php 
					foreach($months as $month=>$posts) { ?>
                <?php $total_month = count($posts); //total posts in this month ?> 
                <li><a>
                    <?php echo date( 'F', mktime(0, 0, 0, $month) ); ?></a> (<?php echo $total_month; // print total posts for this month ?>)
                    <ul class="archive-sub-menu-posts">
                    <?php foreach($posts as $post) { ?>
                        <li>
                            <a href="<?php echo get_permalink($post->ID); ?>"><?php echo $post->post_title; ?></a>
                        </li>
                    <?php } ?>
                    </ul>
                </li>
                <?php } ?>