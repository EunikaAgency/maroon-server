- section(id: layout-list, title: 'List Layout settings')

listColumns:
	type: variable
	default: 1

listEnableCarousel:
	label: Carousel
	type: variable
	default: on

listEnableAutoplay:
	label: Carousel Autoplay
	type: on-off
	default: off
	help: "Enable or disable carousel autoplay feature"

listEnableFading:
	label: Carousel Fading
	type: on-off
	default: off
	help: "Enable or disable carousel fading feature"

listRows:
	type: variable
	default: 1